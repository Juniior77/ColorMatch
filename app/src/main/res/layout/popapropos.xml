<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <TextView
        android:text="VILAIRE Guillaume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:text="ColorMatch V: 1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginBottom="71dp"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/a_propos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="DE OLIVEIRA Anthony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Dévellopé par:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/bleu"
        android:layout_marginEnd="21dp"
        android:id="@+id/imageView10"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/textView5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ciel"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginStart="24dp"
        android:id="@+id/imageView11" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/marron"
        android:layout_alignTop="@+id/imageView12"
        android:layout_alignStart="@+id/imageView11"
        android:id="@+id/imageView13" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/orange"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView10"
        android:layout_marginBottom="89dp"
        android:id="@+id/imageView14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/rose"
        android:layout_alignBottom="@+id/imageView14"
        android:layout_alignStart="@+id/imageView11"
        android:id="@+id/imageView15" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/turquoise"
        android:layout_alignTop="@+id/imageView15"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView16" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/vertclaire"
        android:layout_alignTop="@+id/imageView12"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView17" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/jaune"
        android:layout_marginBottom="21dp"
        android:id="@+id/imageView12"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/imageView10"
        android:contentDescription="" />

</RelativeLayout>